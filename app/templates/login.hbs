<form role="form" id="login-form" {{action login on="submit"}}>
	{{input class="form-control form-group" value=username type="text" placeholder="Username"}}
    {{input class="form-control form-group" value=password type="password" placeholder="Password"}}
    <label class="form-group form-control">
    	{{input type="checkbox" checked=rememberme}}
    	Remember me
	</label>
    {{input class="btn btn-primary col-md-12" type="submit" value="Log In"}}
</form>